<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ccc"
    android:paddingBottom="1px">

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/tab_item_height"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <!-- android:id="@+id/tab_text" -->
            <TextView
                android:id="@+id/tab_text1"
                style="@style/tab_text_color_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/remedial_class_message" />

            <ImageView
                android:id="@+id/flag1"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/shape_circle"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            style="@style/tab_item_height"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab_text2"
                style="@style/tab_text_color_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="@string/system_message" />

            <ImageView
                android:id="@+id/flag2"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/shape_circle"
                android:visibility="invisible" />
        </LinearLayout>


    </LinearLayout>
</FrameLayout>