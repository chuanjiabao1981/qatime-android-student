<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/stroke_background"
              android:descendantFocusability="blocksDescendants"

              android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="#dcdcdc"
                android:src="@mipmap/photo"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:background="#faf6f6"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/classname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingBottom="5dp"

                    android:text="高考考前急速高考考前急速高高考考前急速高考考前急速高"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:paddingLeft="2dp"
                        android:text="年级"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="科目"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/teacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="2dp"
                        android:text="教师"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="15dp"
                        android:layout_height="match_parent"/>

                    <TextView
                        android:id="@+id/progress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:padding="2dp"
                        android:text="1/10"
                        android:textSize="13sp"/>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="开课20160715  15:30"
                    android:textSize="13sp"/>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#faf6f6"
                android:gravity="center">

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="状态"
                    android:textColor="#ffa217"
                  />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:paddingTop="1dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/amount_payment_item"/>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#f9270c"
                    android:textStyle="bold"/>
            </LinearLayout>


            <TextView
                android:id="@+id/cancel_order"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:gravity="center"
                android:textColor="#aaaaaa"
                android:singleLine="true"
                android:text="@string/cancel_order"/>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_bg_selector_red"
                android:gravity="center"
                android:textColor="#fff"
                android:text="@string/pay"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
