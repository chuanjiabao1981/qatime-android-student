<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:background="@color/colorPrimary">

                <ImageView
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/head_sculpture"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@mipmap/error_header" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:text="姓名"
                        android:textColor="#fff" />
                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dfdddd" />


            <LinearLayout
                android:id="@+id/my_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:src="@mipmap/center_my_wallet"
                    android:layout_marginLeft="10dp"
                    android:layout_height="18dp" />
                <TextView
                    style="@style/setting_text_style"
                    android:text="@string/my_wallet" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp"
                    android:text="0.00"
                    android:textColor="#333333" />

                <ImageView
                    style="@style/setting_icon_margin_right"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/personal_enter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dfdddd" />

            <LinearLayout
                android:id="@+id/my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:src="@mipmap/center_my_order"
                    android:layout_marginLeft="10dp"
                    android:layout_height="18dp" />
                <TextView
                    style="@style/setting_text_style"
                    android:text="@string/my_order" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    style="@style/setting_icon_margin_right"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/personal_enter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dfdddd" />

            <LinearLayout
                android:id="@+id/my_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:src="@mipmap/center_my_live"
                    android:layout_marginLeft="10dp"
                    android:layout_height="18dp" />
                <TextView
                    style="@style/setting_text_style"
                    android:text="@string/my_course" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    style="@style/setting_icon_margin_right"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/personal_enter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dfdddd" />

            <LinearLayout
                android:id="@+id/my_interact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:src="@mipmap/center_my_interact"
                    android:layout_marginLeft="10dp"
                    android:layout_height="18dp" />
                <TextView
                    style="@style/setting_text_style"
                    android:text="@string/my_interact" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    style="@style/setting_icon_margin_right"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/personal_enter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dfdddd" />
            <LinearLayout
                android:id="@+id/my_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:src="@mipmap/center_my_video"
                    android:layout_marginLeft="10dp"
                    android:layout_height="18dp" />
                <TextView
                    style="@style/setting_text_style"
                    android:text="@string/my_video" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    style="@style/setting_icon_margin_right"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/personal_enter" />
            </LinearLayout>  <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dfdddd" />
            <LinearLayout
                android:id="@+id/my_taste"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:src="@mipmap/center_my_video"
                    android:layout_marginLeft="10dp"
                    android:layout_height="18dp" />
                <TextView
                    style="@style/setting_text_style"
                    android:text="@string/my_taste" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    style="@style/setting_icon_margin_right"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/personal_enter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dfdddd" />
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dfdddd" />

            <LinearLayout
                android:id="@+id/security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:src="@mipmap/center_security"
                    android:layout_marginLeft="10dp"
                    android:layout_height="18dp" />
                <TextView
                    style="@style/setting_text_style"
                    android:text="@string/security_management" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    style="@style/setting_icon_margin_right"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/personal_enter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dfdddd" />

            <LinearLayout
                android:id="@+id/setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:src="@mipmap/center_setting"
                    android:layout_marginLeft="10dp"
                    android:layout_height="18dp" />
                <TextView
                    style="@style/setting_text_style"
                    android:text="@string/setting" />

                <TextView
                    android:id="@+id/new_version"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:paddingTop="12dp"
                    android:text="@string/new_edition"
                    android:textColor="#e20914"
                    android:textSize="10dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1px"
                    android:layout_weight="1" />

                <ImageView
                    style="@style/setting_icon_margin_right"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/personal_enter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dfdddd" />

            <LinearLayout
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="18dp"
                    android:src="@mipmap/about_us"
                    android:layout_marginLeft="10dp"
                    android:layout_height="18dp" />
                <TextView
                    style="@style/setting_text_style"
                    android:text="@string/about_us" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />


                <ImageView
                    style="@style/setting_icon_margin_right"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/personal_enter" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#dfdddd" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
