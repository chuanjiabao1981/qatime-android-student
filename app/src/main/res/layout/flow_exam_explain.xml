<?xml version="1.0" encoding="utf-8"?>
<cn.qatime.player.flow.FlowExamExplainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="标题"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/describe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="描述" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/next"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/button_bg_selector_red_with_stork"
        android:text="跳过等待直接进入"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="10秒后自动进入"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />
</cn.qatime.player.flow.FlowExamExplainLayout>