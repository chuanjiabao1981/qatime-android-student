<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/tab_menu_height"
    android:layout_width="match_parent"
    android:background="@drawable/shape_menu_tab"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        style="@style/tab_menu_height"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_img1"
            style="@style/tab_menu_icon_size"
            android:src="@mipmap/tab_home_1" />

        <TextView
            android:id="@+id/tab_text1"
            style="@style/tab_menu_text_color_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/home_page" />
    </LinearLayout>

    <LinearLayout
        style="@style/tab_menu_height"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_img2"
            style="@style/tab_menu_icon_size"
            android:src="@mipmap/tab_tutorship_2" />

        <TextView
            android:id="@+id/tab_text2"
            style="@style/tab_menu_text_color_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/Remedial_class" />
    </LinearLayout>

    <LinearLayout
        style="@style/tab_menu_height"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_img3"
            style="@style/tab_menu_icon_size"
            android:src="@mipmap/tab_moments_2" />

        <TextView
            android:id="@+id/tab_text3"
            style="@style/tab_menu_text_color_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/time_table" />
    </LinearLayout>

    <LinearLayout
        style="@style/tab_menu_height"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_img4"
            style="@style/tab_menu_icon_size"
            android:src="@mipmap/tab_message_2" />

        <TextView
            android:id="@+id/tab_text4"
            style="@style/tab_menu_text_color_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/message" />
    </LinearLayout>


    <LinearLayout
        style="@style/tab_menu_height"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/tab_img5"
            style="@style/tab_menu_icon_size"
            android:src="@mipmap/tab_person_2" />

        <TextView
            android:id="@+id/tab_text5"
            style="@style/tab_menu_text_color_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/individual" />
    </LinearLayout>

</LinearLayout>