<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout style="@style/top_style">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_top_tab" />

        <TextView
            style="@style/backbar_text_style"
            android:layout_centerInParent="true"
            android:text="@string/Remedial_class" />
    </RelativeLayout>

    <LinearLayout
        style="@style/tab_item_height"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/time_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/time_text"
                style="@style/tab_text_color_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_time" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="2dp"
                android:background="@mipmap/down" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/subject_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/subject_text"
                style="@style/tab_text_color_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_subject" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="2dp"
                android:background="@mipmap/down" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/class_sort"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/class_text"
                style="@style/tab_text_color_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/by_grade" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_margin="2dp"
                android:background="@mipmap/down" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/screen"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clickable="true">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:src="@mipmap/screen_funnel" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <com.handmark.pulltorefresh.library.PullToRefreshGridView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:cacheColorHint="@null"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="20dp" />

    </RelativeLayout>


</LinearLayout>