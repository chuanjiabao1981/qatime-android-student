<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="@string/price"
            android:textColor="#4000" />

        <EditText
            android:id="@+id/price_low"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_input"
            android:inputType="number"
            android:maxLength="5"
            android:minEms="3"
            android:paddingBottom="3dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColorHint="#ff999999" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="-" />

        <EditText
            android:id="@+id/price_high"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_input"
            android:inputType="number"
            android:maxLength="5"
            android:minEms="3"
            android:paddingBottom="3dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColorHint="#ff999999" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/yuan"
            android:textColor="#a000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="@string/class_hours_range"
            android:textColor="#4000" />

        <EditText
            android:id="@+id/subject_low"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_input"
            android:inputType="number"
            android:maxLength="3"
            android:minEms="3"
            android:paddingBottom="3dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColorHint="#ff999999" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="-" />

        <EditText
            android:id="@+id/subject_high"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_input"
            android:inputType="number"
            android:maxLength="3"
            android:minEms="3"
            android:paddingBottom="3dp"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColorHint="#ff999999" />

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="@string/starting_range"
            android:textColor="#4000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/begin_class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-11-11"
                android:textColor="#a000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="2dp"
                android:scaleType="centerInside"
                android:src="@mipmap/down" />
        </LinearLayout>

        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="@string/to"
            android:textColor="#3000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/end_class_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-11-11"
                android:textColor="#a000"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="2dp"
                android:scaleType="centerInside"
                android:src="@mipmap/down" />
        </LinearLayout>

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="15dp"
            android:text="@string/state"
            android:textColor="#4000" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/started"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/text_background_select"
                android:clickable="true">

                <CheckedTextView
                    android:id="@+id/started_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:checked="true"
                    android:text="@string/started"
                    android:textColor="@drawable/text_selector" />
                <TextView
                    android:id="@+id/started_selected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/started_text"
                    android:layout_centerVertical="true"
                    android:text="√" />
            </RelativeLayout>
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" />
            <RelativeLayout
                android:id="@+id/recruiting"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:background="@drawable/text_background_select"
                android:clickable="true">
                <CheckedTextView
                    android:id="@+id/recruiting_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/recruiting"
                    android:textColor="@drawable/text_selector" />
                <TextView
                    android:id="@+id/recruiting_selected"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:layout_toLeftOf="@id/recruiting_text"
                    android:layout_centerVertical="true"
                    android:text="√"  />

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_background"
            android:text="@string/reset"
            android:textColor="#fff" />

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_background"
            android:text="@string/confirm"
            android:textColor="#fff" />

    </LinearLayout>


</LinearLayout>