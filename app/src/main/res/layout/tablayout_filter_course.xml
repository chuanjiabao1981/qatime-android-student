<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/shape_top_tab"
    android:gravity="center">

    <ImageView
        style="@style/backbar_icon_style"
        android:onClick="backClick"
        android:src="@mipmap/back_arrow" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@drawable/shape_bg_course_filter"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="直播课"
            android:background="@drawable/shape_bg_course_filter_item_left"
            android:textColor="@drawable/text_course_filter_color_selector"
            android:textSize="14.0sp" />


        <TextView
            android:id="@+id/tab_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="一对一"
            android:background="@drawable/shape_bg_course_filter_item_center"
            android:textColor="@drawable/text_course_filter_color_selector"
            android:textSize="14.0sp" />


        <TextView
            android:id="@+id/tab_text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="视频课"
            android:background="@drawable/shape_bg_course_filter_item_right"
            android:textColor="@drawable/text_course_filter_color_selector"
            android:textSize="14.0sp" />
    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!--search-->
    <ImageView style="@style/backbar_icon_style" />
</LinearLayout>