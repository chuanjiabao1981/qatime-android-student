<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/tab_item_height"
            android:orientation="horizontal">


            <!-- android:id="@+id/tab_text" -->
            <TextView
                android:id="@+id/tab_text1"
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:gravity="center_vertical"
                android:text="公告"
                style="@style/tab_text_color_select" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            style="@style/tab_item_height"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab_text2"
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:gravity="center_vertical"
                android:text="@string/chat"
                style="@style/tab_text_color_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            style="@style/tab_item_height"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab_text3"
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:gravity="center_vertical"
                android:text="@string/live_details"
                style="@style/tab_text_color_normal" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            style="@style/tab_item_height"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tab_text4"
                android:layout_width="wrap_content"
                android:layout_height="18.0dip"
                android:gravity="center_vertical"
                android:text="@string/member_list"
                style="@style/tab_text_color_normal" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>